{% extends 'templates/app.twig' %}
{% block content %}

    <div id="load">
    </div>

<div id="wrapper-content"><!-- PAGE WRAPPER-->
    <div id="page-wrapper"><!-- MAIN CONTENT-->
        <div class="main-content"><!-- CONTENT-->
            <div class="content">
                <div class="section banner background-opacity page-title set-height-top">
                    <div class="container">
                        <div class="page-title-wrapper"><h2 class="captions">Noticia</h2>
                            <ol class="breadcrumb">
                                <li><a href="{{ base_url()}}">Inicio</a></li>
                                <li><a href="{{ base_url()}}/noticias">Noticias</a></li>
                                <li class="active"><a href="#">Detalles</a></li>
                            </ol>
                        </div>
                    </div>
                </div>

                <div class="section section-padding news-detail">
                    <div class="container">
                        <div class="news-detail-wrapper">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="news-detail">
                                        
                                     
                                         <h1 class="title-news">{{ noticia.titulo }}</h1>

                                        <div class="info">
                                            <div class="author item"><a href="#"><span>Publicado por</span><span> Administrador</span></a></div>
                                            <div class="date-time item"><a href="#"><span>Fecha:</span><span> {{ noticia.principal }}</span></a></div>
                                        </div>
                                        
                                        <div class="col-md-12 col-sm-12">
                                            <div class="news-content">
                                                        {{ noticia.detalle | raw  }}
                                            </div>
                                        </div>
                                         
                                        <div class="col-md-12 col-sm-12">
                                            <img src="{{ base_url()}}/{{ noticia.foto }}" alt="" class="news-image">
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- BUTTON BACK TO TOP-->
    <div id="back-top"><a href="#top" class="hide"><i class="fa fa-angle-double-up"></i></a></div>
</div>

{% endblock content %}
