{% extends 'templates/app.twig' %}
{% block content %}

    <div id="load">
    </div>


    <div id="wrapper-content">
        <div id="page-wrapper">
            <div class="main-content">
                <div class="content">

                <div class="section banner  background-opacity page-title set-height-top">
                    <div class="container">
                        <div class="page-title-wrapper"><h2 class="captions">Noticias</h2>
                            <ol class="breadcrumb">
                                <li><a href="{{ base_url()}}">Inicio</a></li>
                                <li class="active"><a href="#">Noticias</a></li>
                            </ol>
                        </div>  
                    </div>
                </div>

                    <div class="section section-padding news-page">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row news-page-wrapper">
                                    
                                    {% for lista in EntradaController.listaNoticias %}  
                                    <div class="col-sm-6">
                                        <div class="edugate-layout-3 news-gird">
                                            <div class="edugate-layout-3-wrapper">
                                                <a href="{{ base_url() }}/noticia/detalle/{{ lista.codigo }}" class="edugate-image">
                                                    <img src="{{ base_url() }}/{{ lista.foto }}" alt="" class="img-responsive">
                                                </a>

                                                <div class="edugate-content"><a href="{{ base_url() }}/noticia/detalle/{{ lista.codigo }}" class="title">{{ lista.titulo }}</a>

                                                    <div class="info">
                                                        <div class="author item"><a href="{{ base_url() }}/noticia/detalle/{{ lista.codigo }}">Publicado por: Administrador</a></div>
                                                        <div class="date-time item"><a href="{{ base_url() }}/noticia/detalle/{{ lista.codigo }}">{{ lista.principal }}</a></div>
                                                    </div>

                                                    <div class="description">{{ lista.detallecorto }}</div>
                                                    <button class="btn btn-green" onclick="location.href='{{ base_url() }}/noticia/detalle/{{ lista.codigo }}'"><span>Leer m√°s</span></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                     {% endfor %}  
                                </div>

                            </div>
              
                        </div>
                    </div>
                </div>
                                
                </div>
            </div>
        </div>
    </div>


{% endblock content %}
